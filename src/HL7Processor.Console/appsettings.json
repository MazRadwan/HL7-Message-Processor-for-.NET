{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "HL7Settings": {
    "DefaultVersion": "2.5",
    "ValidateMessages": true,
    "MaxMessageSize": 1048576,
    "TimeoutSeconds": 30
  },
  "MLLPSettings": {
    "ListenPort": 12345,
    "MaxConnections": 100,
    "KeepAliveInterval": 30
  },
  "DatabaseSettings": {
    "ConnectionString": "Data Source=hl7_messages.db",
    "Provider": "SQLite"
  }
}